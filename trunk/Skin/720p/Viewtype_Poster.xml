<includes>
	<include name="Poster">
		<control type="group">	
			<visible>Control.IsVisible(729)</visible>
			<!--
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<aspectratio>stretch</aspectratio>
				<texture>showcase/blackback.png</texture>
				<colordiffuse>DAFFFFFF</colordiffuse>
			</control>
			-->
			<control type="fixedlist" id="729">
				<viewtype label="Poster">list</viewtype>
				<onleft>729</onleft>
				<onright>729</onright>
				<posx>-20</posx>
				<posy>95</posy>
				<height>515</height>
				<width>1316</width>
				<onup>2</onup>
				<ondown>61</ondown>
				<orientation>horizontal</orientation>
				<focusposition>3</focusposition>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<pagecontrol>61</pagecontrol>
				<visible>Window.IsActive(videolibrary) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
				<itemlayout width="168" height="245">
					<control type="image">
						<posx>1</posx>
						<posy>131</posy>
						<width>162</width>
						<height>241</height>
						<bordertexture border="5">ThumbBorder.png</bordertexture>
						<bordersize>6</bordersize>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>60</posx>
						<posy>133</posy>
						<width>100</width>
						<height>100</height>
						<texture>OverlayWatched.png</texture>
						<visible>!IsEmpty(ListItem.Title) + [[Container.Content(movies) + !Skin.HasSetting(HideMovieWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [!Container.Content(movies) + !Skin.HasSetting(HideTVWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)]]</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>366</posy>
						<width>163</width>
						<height>160</height>
						<aspectratio>stretch</aspectratio>
						<bordertexture border="5" diffuse="diffuse_mirror2.png">button-nofocus.png</bordertexture>
						<bordersize>4</bordersize>
						<fadetime>200</fadetime>
						<texture background="true" flipy="true" diffuse="diffuse_mirror2.png">$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout width="328" height="515">
					<control type="image">
						<posx>2</posx>
						<posy>20</posy>
						<width>320</width>
						<height>476</height>
						<bordertexture border="8">ThumbBorder.png</bordertexture>
						<bordersize>8</bordersize>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>					
						<aspectratio scalediffuse="false">keep</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="51" end="100" time="600" tween="back" easing="out" />
						</animation>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>2</posx>
						<posy>20</posy>
						<width>320</width>
						<height>476</height>
						<bordertexture border="8">ThumbBorder.png</bordertexture>
						<bordersize>8</bordersize>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>					
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="51" end="100" time="600" tween="back" easing="out" />
						</animation>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>119</posx>
						<posy>22</posy>
						<width>200</width>
						<height>200</height>
						<texture>OverlayWatched.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="51" end="100" time="600" tween="back" easing="out" />
							<effect type="fade" start="0" end="100" time="600" />
						</animation>
						<visible>!IsEmpty(ListItem.Title) + Container.Content(movies) | !Container.Content(movies)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<control type="textbox">
					<posx>840</posx>
					<posy>498</posy>
					<width>370</width>
					<height>140</height>
					<font>font35_title</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<info>ListItem.Label</info>
					<visible>!Container.Content(seasons)</visible>
					<autoscroll time="2400" delay="2400" repeat="1200">True</autoscroll>
				</control>
				<control type="textbox">
					<posx>840</posx>
					<posy>498</posy>
					<width>370</width>
					<height>140</height>
					<font>font35_title</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[ListItem.TVShowTitle][CR]$INFO[ListItem.Label]</label>
					<visible>Container.Content(seasons)</visible>
					<autoscroll time="2400" delay="2400" repeat="1200">True</autoscroll>
				</control>
				<control type="grouplist">
					<description>Media Codec Flagging Images</description>
					<posx>10</posx>
					<posy>620</posy>
					<width>1280</width>
					<align>center</align>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<include>VideoCodecFlaggingConditions</include>
					<include>AudioCodecFlaggingConditions</include>
					<include>AspectCodecFlaggingConditions</include>
					<include>VideoTypeHackFlaggingConditions</include>
				</control>
				<control type="label">
					<posx>10</posx>
					<posy>60</posy>
					<width>1280</width>
					<height>80</height>
					<font>font12_title</font>
					<align>center</align>
					<scroll>true</scroll>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[ListItem.Tagline]</label>
				</control>
				<control type="image">
					<posx>270</posx>
					<posy>500</posy>
					<width>105</width>
					<height>60</height>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[listitem.Studio,flagging/studios/,.png]</texture>
				</control>
				<control type="group">
					<posx>365</posx>
					<posy>513</posy>
					<width>25</width>
					<height>25</height>
					<aspectratio>stretch</aspectratio>
					<include>VideoMPAAFlaggingConditions</include>
					<visible>Container.Content(Movies)</visible>
				</control>
				<control type="group">
					<posx>365</posx>
					<posy>477</posy>
					<width>25</width>
					<height>25</height>
					<aspectratio>stretch</aspectratio>
					<include>VideoMPAAFlaggingConditions</include>
					<visible>Container.Content(TVShows) | Container.Content(Seasons)</visible>
				</control>
			</control>
			<control type="scrollbar" id="61">
				<posx>300</posx>
				<posy>630</posy>
				<width>720</width>
				<height>18</height>
				<visible allowhiddenfocus="true">Control.IsVisible(729) + Control.HasFocus(61)</visible>
				<texturesliderbackground border="14,0,14,0">ScrollBarH.png</texturesliderbackground>
				<texturesliderbar border="14,0,14,0">ScrollBarH_bar.png</texturesliderbar>
				<texturesliderbarfocus border="14,0,14,0">ScrollBarH_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onup>728</onup>
				<ondown>-</ondown>
				<showonepage>true</showonepage>
				<orientation>horizontal</orientation>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(61)">Conditional</animation>
			</control>
		</control>
	</include>





	<include name="MusicPoster">
		<control type="group">	
			<visible>Control.IsVisible(737)</visible>
			<!--
