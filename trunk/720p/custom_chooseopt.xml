<window type="dialog" id="2114">
	<defaultcontrol>1000</defaultcontrol>
	<include>dialogeffect</include>
	<coordinates>
		<system>1</system>
		<posx>400</posx>
		<posy>200</posy>
	</coordinates>
	<controls>
		<control type="image" id="999">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>300</width>
			<height>200</height>
			<texture border="45,0,45,0">DialogContextMiddle.png</texture>
		</control>
		
		<control type="list" id="1000">
			<posx>0</posx>
			<posy>0</posy>
			<width>297</width>
			<height>225</height>
			<onleft>9010</onleft>
			<onright>9010</onright>
			<onup>1000</onup>
			<ondown>1000</ondown>
			<pagecontrol>-</pagecontrol>
			<scrolltime>300</scrolltime>
			<itemlayout height="30" width="297">
				<control type="label">
					<posx>150</posx>
					<posy>0</posy>
					<width>297</width>
					<height>25</height>
					<font>font24caps_title</font>
					<textcolor>grey3</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="30" width="297">
				<control type="label">
					<posx>150</posx>
					<posy>0</posy>
					<width>297</width>
					<height>25</height>
					<font>font24caps_title</font>
					<textcolor>white</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
			<content>
				<item id="1">
					<label>Favori</label>
					<onclick>-</onclick>
					<onclick>ActivateWindow(1114)</onclick>
					<onclick>Dialog.Close(2114)</onclick>
				</item>
				<item id="2">
					<label>Playlist Musical</label>

					<onclick>Skin.SetFile($INFO[Skin.String(RunOpt)],.m3u,special://musicplaylists/)</onclick>
					<!--
					<onclick>Skin.SetFile($INFO[Skin.String(RunOpt)],.m3u)</onclick>
					-->
					<onclick>Dialog.Close(2114)</onclick>
				</item>
				<item id="3">
					<label>Playliste Video</label>
					<onclick>Skin.SetFile($INFO[Skin.String(RunOpt)],.xsp,special://videoplaylists/)</onclick>
					<!--
					<onclick>Skin.SetFile($INFO[Skin.String(RunOpt)],.xsp)</onclick>
					-->
					<onclick>Dialog.Close(2114)</onclick>
				</item>
				<item id="4">
					<label>Script</label>
					<!--
					<onclick>Skin.Setfile($INFO[Skin.String(RunOpt)],.py,special://script)</onclick>
					-->
					<onclick>Skin.Setfile($INFO[Skin.String(RunOpt)],.py)</onclick>
<!--
RunScript(script[,args]*)	 Runs the python script. You must specify the full path to the script, (or use Q:\Scripts\Scriptname.py on Xbox). If the script is an add-on, you can also execute it using its add-on id. As of 2007/02/24, all extra parameters are passed to the script as arguments and can be accessed by python using sys.argv
-->
					<onclick>Dialog.Close(2114)</onclick>
				</item>
				<item id="5">
					<label>Addon</label>
					<!--
					<onclick>Skin.SetAddon($INFO[Skin.String(RunOpt)],xbmc.python.script)></onclick>
					-->
<!--
RunPlugin(plugin)	 Runs the plugin. Full path must be specified. Does not work for folder plugins
-->
					<onclick>Skin.SetAddon($INFO[Skin.String(RunOpt)])></onclick>
					<onclick>Dialog.Close(2114)</onclick>
				</item>
				<item id="6">
					<label>Saisie libre</label>
					<onclick>Skin.SetString($INFO[Skin.String(RunOpt)])</onclick>
					<onclick>Dialog.Close(2114)</onclick>
				</item>
			</content>
		</control>
	</controls>
</window>
